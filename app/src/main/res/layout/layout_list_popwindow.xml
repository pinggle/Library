<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/ll_bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="@dimen/padding_medium"
                android:paddingLeft="@dimen/padding_medium"
                android:paddingRight="@dimen/padding_medium">

    <!--title-->
    <TextView
        android:id="@+id/tv_popwindow_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/popwindow_item_height"
        android:layout_above="@+id/top_divider_line"
        android:background="@drawable/round_half_top"
        android:gravity="center"
        android:padding="@dimen/padding_medium"
        android:text="关联申请"
        android:textColor="@color/colorGray"
        android:textSize="@dimen/small_textsize"/>

    <!--分隔线-->
    <View
        android:id="@+id/top_divider_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line_height_small"
        android:layout_above="@+id/lv_popwindow"
        android:background="@color/colorGray"/>

    <!--列表视图-->
    <ListView
        android:id="@+id/lv_popwindow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_divider_line"
        android:divider="@null"
        android:listSelector="@color/colorTransparent"/>

    <!--透明条块分隔线-->
    <View
        android:id="@+id/bottom_divider_line"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_above="@+id/tv_popwindow_footer"
        android:background="@color/colorTransparent"/>

    <!--底部按钮-->
    <TextView
        android:id="@+id/tv_popwindow_footer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/popwindow_item_height"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/margin_medium"
        android:background="@drawable/item_selector"
        android:gravity="center"
        android:padding="@dimen/padding_medium"
        android:text="关联申请"
        android:textColor="@color/colorBlue"
        android:textSize="@dimen/renormal_textsize"/>

</RelativeLayout>